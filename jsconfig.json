{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    "jsx": "preserve",
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
